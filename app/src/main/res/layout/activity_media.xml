<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.ricardomendes.abastecimento.MediaActivity">
    <ImageView
        android:id="@+id/imgmain"
        android:layout_width="match_parent"
        android:layout_height="254dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/main2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtQtde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Editextcolor"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:hint="@string/qtde"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/imgmain"
        />

    <EditText
        android:id="@+id/edtKms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Editextcolor"
        android:textColor="@color/white"
        android:inputType="numberDecimal"
        android:hint="@string/kms"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/edtQtde"
        />

    <ImageButton
        android:id="@+id/btCalcularMedia"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/button_comparar"
        android:background="@drawable/button_custom"
        app:layout_constraintTop_toBottomOf="@id/edtKms"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>
